}

<html>
    <head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <style>
            body{
            background-color: #1E1E1E;
           /*  background-image: url('image\\flight1.jpg'); */
                /*  background:#121212;  */
               /*  background:#f0f2f5; */

            }
            .h1{
                text-align:center;
                color:#e0e0e0;
             /*    color:#333333; */
               /*  background: linear-gradient(90deg,#00dbde,#fc00ff);
                -webkit-background-clip:text;
                -webkit-text-fill-color:transparent; */
                font-weight:600;
            
                
            }
            .hr{
                border:4px solid green;
            }
            .div{
                align-items:center;
                justify-content:center;
           
            }
          /*   .fm{
             display:grid;
             grid-template-columns:1fr 6fr;
            } */
            .tx{
                font-size:25px;
                font-weight:600;
                color:#E0E0E0;
            /*    color:#333333; */
            }
            .bt{
                display:flex;
               
            }
            .bt1{
            margin-right: 40px;
            }
        </style>
    </head>
    <body>


   
    
    <div class=" div row">
       
        <div class=" div2 col-md-4">
            <h1 class="h1">Register</h1>
            <hr class="hr" />
            <form class="fm" asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FirstName" class=" tx control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class=" tx control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class=" tx control-label"></label>
                    <input asp-for="Gender" class="form-control" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class=" tx control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class=" tx control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class=" tx control-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <br />
                <div class=" bt form-group">
                    <input type="submit" value="Register" class=" bt1 btn btn-primary" />
              
                       <br />
              
                    <input type="submit" asp-action="Login" value="Login" class="btn btn-primary" />
                 
                </div>
                <br />
            </form>
        </div>
    </div>

    </body>
</html>


